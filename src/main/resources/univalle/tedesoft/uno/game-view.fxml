                <Insets left="20.0" right="20.0" top="30.0" />
            </padding>
        </VBox>
    </left>
    <right>
        <VBox alignment="TOP_CENTER" prefWidth="130.0" spacing="30.0" BorderPane.alignment="CENTER">
