<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="univalle.tedesoft.uno.controller.GameController">
    <top>
        <VBox alignment="CENTER" prefHeight="150.0" spacing="10.0" BorderPane.alignment="CENTER">
            <Label fx:id="machineCardsCountLabel" text="Cartas Máquina: 5" />
            <HBox fx:id="machineHandHBox" alignment="CENTER" prefHeight="100.0" spacing="5.0">
            </HBox>
            <padding>
                <Insets top="10.0" bottom="10.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <HBox alignment="CENTER" prefHeight="150.0" spacing="50.0" BorderPane.alignment="CENTER">
            <ImageView fx:id="deckImageView" fitHeight="100.0" pickOnBounds="true" preserveRatio="true" onMouseClicked="#handleMazoClick">
            </ImageView>
            <ImageView fx:id="discardPileImageView" fitHeight="100.0" pickOnBounds="true" preserveRatio="true">
            </ImageView>
        </HBox>
    </center>
    <bottom>
        <VBox alignment="CENTER" prefHeight="200.0" spacing="10.0" BorderPane.alignment="CENTER">
            <Label fx:id="messageLabel" text="Mensajes del juego aquí" />
            <Label fx:id="turnLabel" text="Turno de: Humano" />
            <HBox fx:id="playerHandHBox" alignment="CENTER" prefHeight="100.0" spacing="5.0">
            </HBox>
            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="passButton" mnemonicParsing="false" onAction="#handlePassButtonAction" text="Pasar" />
                <Button fx:id="unoButton" mnemonicParsing="false" onAction="#handleUnoButtonAction" text="UNO!" style="-fx-background-color: yellow; -fx-font-weight: bold;"/>
                <ProgressIndicator fx:id="unoTimerIndicator" progress="0.0" prefWidth="40.0" prefHeight="40.0"/>
                <padding>
                    <Insets top="10.0" bottom="20.0" />
                </padding>
            </HBox>
        </VBox>
    </bottom>
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
            <Button fx:id="restartButton" mnemonicParsing="false" onAction="#handleRestartButtonAction" text="Reiniciar" />
            <padding>
                <Insets top="20.0" />
            </padding>
        </VBox>
    </left>
    <right>
        <VBox alignment="TOP_CENTER" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
            <Button fx:id="aidButton" mnemonicParsing="false" onAction="#handleAidButtonAction" text="?" style="-fx-font-size: 18px;"/>
            <padding>
                <Insets top="20.0" />
            </padding>
        </VBox>
    </right>
</BorderPane>